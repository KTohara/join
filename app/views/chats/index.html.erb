<h1>CHATS</h1>
<% @chats.each do |chat_preview| %>
  <div class="flex flex-col gap-2 bg-white p-1 rounded-2xl">
    <%= link_to chat_path(chat_preview),
      data: { turbo_frame: :chats },
      class: 'flex items-center gap-2 p-1 w-full border rounded-2xl bg-slate-200' do %>
      <%= image_tag avatar_image(chat_preview.other_user(current_user), :thumb), class: 'avatar h-8 w-8' %>
      
      <div class="flex flex-col">
        <p class="font-normal"><%= chat_preview.other_user(current_user).name %></p>
        <p class="text-xs"><%= chat_preview_last_message(chat_preview) %></p>
      </div>
    <% end %>
  </div>
<% end %>
 