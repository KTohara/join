<%= turbo_frame_tag :chats do %>
  <%= turbo_stream_from dom_id(@chat, :container) %>

  <div class="relative">
    <div class="fixed bottom-0 right-0 p-2 w-80 h-[500px] bg-white border-2 border-slate-200 rounded-md">
      <div class="flex flex-col h-full">
        <div id="<%= dom_id(@chat, :messages) %>" class="flex flex-col h-auto overflow-y-scroll">
          <%= render @chat.messages.includes(:user) %>
        </div>
        <div class="p-1">
          <%= render 'messages/form', chat: @chat, message: @chat.messages.build(user: current_user) %>
        </div>
      </div>
    </div>
  </div>
<% end %>