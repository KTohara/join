<% if commentable.class.name == 'Post' %>
  <%= button_to 'View More Comments', post_show_comments_path(commentable) %>
<% elsif commentable.class.name == 'Comment' && commentable.parent.nil? && commentable.comments.count > 1 %>
  <%= button_to 'Show Replies', comment_show_comments_path(commentable) %>
<% end %>