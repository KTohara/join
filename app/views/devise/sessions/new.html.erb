<div class="w-full h-screen bg-join-splash bg-no-repeat bg-center overflow-y-hidden text-slate-700">
  <div class="mx-auto max-w-sm w-full flex flex-col py-8 px-10 border-2 rounded-md bg-white shadow-md bg-white/90 mt-40">
    <div class="flex flex-col justify-center items-center">
      <h1 class="self-start text-md font-semibold font-source tracking-widest text-orange-500 whitespace-nowrap">login</h1>
      <%= image_tag 'logo-join.svg', class: 'w-full my-3' %>

      <div class="w-full space-y-2">
        <%= form_for resource, as: resource_name, url: session_path(resource_name), data: { turbo: false } do |f| %>
          <div class="flex flex-col gap-3 mb-5">
            <div class="field">
              <%= f.email_field :email, placeholder: 'Email', autocomplete: "email", class: 'form-field' %>
              <%= render 'shared/form_errors', form: f, value_type: :email %>
            </div>

            <div class="field">
              <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class: 'form-field' %>
              <%= render 'shared/form_errors', form: f, value_type: :password %>
            </div>

            <div class="actions">
              <%= f.submit "Login", class: 'btn w-full tracking-widest' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field text-xs flex gap-1 items-center font-normal">
                <%= f.check_box :remember_me, class: 'bg-orange-400/20 rounded-md border-red-300 text-orange-500 focus:ring-0' %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
        <% end %>

        <p class="text-center text-xs tracking-wide font-normal">Or sign in with:</p>
        <div class="flex justify-between gap-1">
          <%= render "devise/shared/links" %>
        </div>

        <div class="flex gap-2 justify-center mb-3 pt-5 font-normal tracking-wide">
          <p>Create an account?</p>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'link underline' %>
        </div>

        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div class="text-center duration-500">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'font-normal underline link' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
