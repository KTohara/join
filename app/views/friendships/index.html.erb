<div class="flex justify-center items-center">
  <h1 class="pr-5 font-source text-center font-semibold text-xl tracking-wide text-orange-500 whitespace-nowrap">
    .friend requests
  </h1>
  <hr class="border-t-2 border-orange-200 w-full">
</div>

<div class="page-content-card mb-6">
  <% @friend_requests.each do |request| %>
    <%= render 'friend_request', user: request.friend %>
  <% end %>
</div>

<div class="flex justify-center items-center">
  <h1 class="pr-5 font-source text-center font-semibold text-xl tracking-wide text-orange-500 whitespace-nowrap">
    .friends
  </h1>
  <hr class="border-t-2 border-orange-200 w-full">
</div>

<div class="page-content-card">
  <div class="flex flex-col">
    <% @friends.each do |friend| %>
      <div class="flex gap-2 justify-between">
        <%= link_to friend, class: 'flex items-center gap-2 link' do %>
          <%= image_tag avatar_image(friend, :thumb), class: 'avatar w-8 h-8' %>
          <p class="font-medium text-slate-600"><%= friend.name %></p>
        <% end %>

        <div class="flex gap-2">
          <%= button_to(friend, params: { friendship: { friend_id: friend.id} }, method: :get, class: 'sm:btn sm:btn-sm') do %>
            <i title="Message" class="fa-solid fa-message text-orange-500 text-lg btn-icon sm:hidden"></i>
            <p class="sm:block hidden normal-case">Message</p>
          <% end %>

          <%= button_to friendship_path(friend), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'sm:btn sm:btn-sm btn-icon ' do %>
            <p class="normal-case sm:block hidden">Remove</p>
            <i class="fa-solid fa-handshake-simple-slash text-orange-500 text-lg px-1 sm:hidden block"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
