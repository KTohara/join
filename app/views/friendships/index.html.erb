<h1>Friendship Requests</h1>
<hr>
<% @friend_requests.each do |request| %>
  <%= render 'friend_request', user: request.friend %>
<% end %>
<br>
<h1>Friends</h1>
<hr>
<div class="flex flex-col">
  <% @friends.each do |friend| %>
    <div class="flex gap-x-2">
      <%= link_to friend.name, friend %>
      <%= button_to 'Remove Friend', friendship_path(friend), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>