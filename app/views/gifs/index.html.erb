<%= turbo_frame_tag :gif_search do %>
  <%= form_with url: gifs_path, method: :get, data: { turbo_frame: :gif_search } do |f| %>
    <%= f.text_field :q, placeholder: 'Search Tenor...' %>
    <%= f.submit %>
  <% end %>

  <% if @results.present? %>
    <div class="relative">
      <div class="absolute w-full h-96 top-0 bg-slate-100 p-2 border-2 rounded-md z-50">
        <div class="flex flex-wrap gap-2">
          <% @results.each do |gif_url| %>
            <div>
              <%= image_tag gif_url, width: '80px' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>