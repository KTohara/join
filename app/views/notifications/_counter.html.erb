<div id="notification_count" class="absolute w-4 lg:bottom-2 bottom-4 lg:left-3 left-4 bg-red-600 opacity-100 rounded-full">
  <% if notification_count > 0 %>
    <span class="text-[10px] font-medium text-white text-center align-middle">
      <%= notification_count >= 99 ? '99+' : notification_count %>
    </span>
  <% end %>
</div>