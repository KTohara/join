<li>
  <div class="flex justify-between">
    <%= link_to notifiable_link_type(notification) do %>
      <span class="text-xs">
        <%= notification.notification_message %>
      </span>
    <% end %>
    <%= button_to notification, method: :delete do %>
      <i class="fa-regular fa-circle-xmark text-red-400 text-xs"></i>
    <% end %>
  </div>

  <% if notification.notifiable_type == 'Friendship' %>
    <div class="flex gap-x-2">
      <%= button_to 'Accept', friendship_path(notification.recipient), params: { friendship: { status: :accepted } }, method: :patch %>
      <%= button_to 'Decline', friendship_path(notification.recipient), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</li>