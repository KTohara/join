<div id="notification_count" class="absolute w-4 h-4 bottom-2 left-3 bg-red-500 opacity-100 rounded-full">
  <% if notification_count > 0 %>
    <span class="absolute right-[6px] top-[-1px] text-[8px] font-medium text-white text-center">
      <%= notification_count >= 99 ? '99+' : notification_count %>
    </span>
  <% end %>
</div>