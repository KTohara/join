<div id="notifications_list" class="text-slate-700 tracking-normal normal-case" data-controller="dropdown">
  <%= render 'notifications/button' %>
  <ul class="absolute z-[1] top-[72px] right-0 w-72 px-4 py-2 border-2 rounded-md bg-white hover:cursor-default shadow-sm" data-dropdown-target="popup">
    <div class="flex justify-between my-2 gap-2 text-[13px] ">
      <div class="flex gap-2 decoration-2 rounded p-1 ">
        <%= button_to 'Unread', unread_notifications_path, class: "#{selected_color('unread')}", method: :get %>
        <%= button_to 'Read', read_notifications_path, class: "#{selected_color('read')}", method: :get %>
      </div>
      <%= button_to 'Clear All', clear_all_notifications_path, class: 'btn-sm normal-case', method: :delete %>
    </div>
    <hr class="mb-2">
    <% if notifications.present? %>
      <%= render notifications %>
    <% else %>
      <li class="text-xs text-center">No notifications</li>
    <% end%>
  </ul>
</div>