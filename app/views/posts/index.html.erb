<%= render 'posts/form', post: @new_post %>

<div id="posts" class="mb-10">
  <%= render @posts, user: current_user %>
</div>

<% if @pagy.next.present? %>
  <%= turbo_frame_tag :loading, loading: :lazy do %>
    <div id="skeleton" class="flex justify-center">
      <p class="text-slate-600 font-normal">Loading Posts...</p>
    </div>
  <% end %>
  <%= turbo_frame_tag :infinite_scroll, loading: :lazy, src: posts_path(format: :turbo_stream), class: 'absolute' %>
<% end %>